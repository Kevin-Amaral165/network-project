// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  email     String    @unique
  password  String
  role      Role      @default(CUSTOMER)
  createdAt DateTime  @default(now())
}

model MemberRequest {
  id        Int                  @id @default(autoincrement())
  name      String
  email     String
  company   String
  reason    String
  status    MemberRequestStatus  @default(PENDING)
  createdAt DateTime             @default(now())
  invitation Invitation?
}

model Invitation {
  id              Int           @id @default(autoincrement())
  token           String        @unique
  expiresAt       DateTime
  used            Boolean       @default(false)
  usedByEmail     String?       // email do usu√°rio que utilizou o token
  createdAt       DateTime      @default(now())
  memberRequestId Int           @unique
  memberRequest   MemberRequest @relation(fields: [memberRequestId], references: [id])
}

enum MemberRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  ADMIN
  CUSTOMER
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}
