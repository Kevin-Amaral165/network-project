// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int
  username  String    @unique
  email     String    @unique
  password  String
  role      Role      @default(CUSTOMER)
  createdAt DateTime  @default(now())
}

model MemberRequest {
  id        Int
  name      String
  email     String
  company   String
  reason    String
  status    MemberRequestStatus  @default(PENDING)
  invitation Invitation?
}

model Invitation {
  id              Int
  token           String        @unique
  expiresAt       DateTime
  used            Boolean       @default(false)
  usedByEmail     String?
  createdAt       DateTime      @default(now())
  memberRequestId Int           @unique
  memberRequest   MemberRequest
}

enum MemberRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  ADMIN
  CUSTOMER
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}